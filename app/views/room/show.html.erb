<h2><%= room_name(@room) %></h2>
<div id="messages" room_id="<%= @room.id %>" user_id="<%= current_user.id %>">
  <% @room.messages.each do |message| %>
    <% if current_user.id == message.user.id%>
      <div class="text-left">
        <%= render message %>
      </div>
    <% else %>
      <div class="text-right">
        <%= render message %>
      </div>
    <% end %>
  <% end %>
</div>
<%= form_with model: @message, url: '#', id: 'new_message' do |f| %>
  <%= hidden_field_tag :room_id, @room.id %>
  <%= f.text_field :content, class: 'form-control', id: 'message_content' %>
  <%= f.submit "送信", class: 'btn btn-primary', id: 'button' %>
<% end %>
