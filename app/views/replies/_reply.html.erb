<div class="reply">
  <span>コメント一覧</span>
  <% micropost.replies.each do |r| %>
    <div>
      <% unless r.content.empty? %>
        <a href="/users/<%= micropost.user %>">@<%= micropost.user.name %></a>
        <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
        <p><%= r.content %></p>
        <hr>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: [micropost, Reply.new] do |f| %>
    <%= f.text_field :content %>
    <br>
    <%= f.submit "コメントする" %>
  <% end %>
</div>
